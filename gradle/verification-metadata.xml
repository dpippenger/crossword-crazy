<?xml version="1.0" encoding="UTF-8"?>
<verification-metadata xmlns="https://schema.gradle.org/dependency-verification"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="https://schema.gradle.org/dependency-verification https://schema.gradle.org/dependency-verification/dependency-verification-1.3.xsd">
   <configuration>
      <verify-metadata>true</verify-metadata>
      <verify-signatures>false</verify-signatures>
      <trusted-artifacts>
         <!-- Trust all artifacts from Google's Maven repository -->
         <trust group="^com\.google\." regex="true"/>
         <trust group="^com\.android\." regex="true"/>
         <trust group="^androidx\." regex="true"/>
         <!-- Trust JetBrains Kotlin artifacts -->
         <trust group="^org\.jetbrains\.kotlin" regex="true"/>
         <trust group="^org\.jetbrains\.kotlinx" regex="true"/>
         <!-- Trust JUnit and testing frameworks -->
         <trust group="junit"/>
         <trust group="^org\.junit\." regex="true"/>
         <trust group="io.mockk"/>
         <trust group="org.robolectric"/>
         <trust group="com.google.truth"/>
      </trusted-artifacts>
   </configuration>
   <!--
      To generate full checksums, run:
      ./gradlew --write-verification-metadata sha256 help

      This will populate this file with SHA-256 checksums for all dependencies.
   -->
</verification-metadata>
